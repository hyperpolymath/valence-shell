(* Valence Shell - Isabelle/HOL Proofs *)

session ValenceShell = "HOL-Library" +
  description "
    Formally verified filesystem operations for the MAA (Mutually Assured Accountability)
    framework. Proves reversibility, composition, and equivalence properties for
    POSIX-like directory and file operations.
  "
  options [document = false, timeout = 300]
  theories
    FilesystemModel
    FileOperations
    FilesystemComposition
    FilesystemEquivalence
    FileContentOperations
    SymlinkOperations
